@model RegisterViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


<form asp-action="Register" asp-controller="Auth" method="post">

    <table align="center">
        <tbody>
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["Name"]
                    </label>
                </td>
                <td>
                    <input class="form-control" asp-for="Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>

                </td>
            </tr>
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["Surname"]
                    </label>
                </td>
                <td>
                    <input class="form-control" asp-for="Surname" />
                    <span class="text-danger" asp-validation-for="Surname"></span>

                </td>
            </tr>
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["Phone"]
                    </label>
                </td>
                <td>
                    <input class="form-control" asp-for="Phone" />
                    <span class="text-danger" asp-validation-for="Phone"></span>

                </td>
            </tr>
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["Email"]
                    </label>
                </td>
                <td>
                    <input class="form-control" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>

                </td>
            </tr>
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["YourRole"]
                    </label>
                </td>
                <td>
                    <select class="form-control" asp-for="Role">
                        <option value="@RoleContants.AdminUserRole">
                            @Localizer["Coworking owner"]

                        </option>
                        <option value="@RoleContants.RegularUserRole">
                            @Localizer["Regular user"]
                        </option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["Password"]
                    </label>
                </td>
                <td>
                    <input class="form-control" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>

                </td>
            </tr>
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["Confirm"]
                    </label>
                </td>
                <td>
                    <input class="form-control" asp-for="ConfirmPassword" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </td>
            </tr>
            <tr>

                <td>
                    <button class="form-control" type="submit">@Localizer["Submit"] </button>
                </td>

            </tr>
        </tbody>
    </table>
</form>


<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.11.3.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
